<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"/>
        <TextView
            android:id="@+id/team_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/metches_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"
            android:minEms="1"/>
        <TextView
            android:id="@+id/metches_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"
            android:minEms="1"/>
        <TextView
            android:id="@+id/metches_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"
            android:minEms="1"/>
        <TextView
            android:id="@+id/metches_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"
            android:minEms="1"/>
        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/standings_margin"
            android:layout_marginEnd="@dimen/standings_margin"
            android:minEms="1"/>
        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:minEms="2"/>
    </LinearLayout>

</RelativeLayout>